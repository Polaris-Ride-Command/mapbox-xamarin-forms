<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ff="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Compat.Maui"
    BackgroundColor="#E6E6E6"
    Title="Mapbox on Xamarin.Forms"
    x:Class="MapBoxQs.Views.HomePage">
    <ListView
        BackgroundColor="#E6E6E6"
        x:Name="lstExamples"
        HasUnevenRows="True"
        SelectionMode="None"
        SeparatorVisibility="None"
        Header="{Binding .}"
        CachingStrategy="RecycleElement">
        <ListView.HeaderTemplate>
            <DataTemplate>
                <SearchBar
                    x:Name="txtSearch"
                    Placeholder="Search"
                    TextChanged="TxtSearch_TextChanged"
                    SearchCommand="{Binding SearchCommand}"
                    SearchCommandParameter="{Binding Text, Source={Reference txtSearch}}" />
            </DataTemplate>
        </ListView.HeaderTemplate>
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout
                        BackgroundColor="White"
                        Spacing="0"
                        Margin="0,8">
                        <ff:CachedImage
                            Source="{Binding ImageUrl}"
                            DownsampleToViewSize="True"
                            HeightRequest="200"
                            CacheType="Disk"
                            Aspect="AspectFill"
                            DownsampleWidth="320" />
                        <StackLayout
                            Spacing="0"
                            Padding="16">
                            <Label
                                Text="{Binding Title}"
                                FontAttributes="Bold"
                                FontSize="Medium" />
                            <Label
                                Text="{Binding Description}"
                                FontSize="Small" />
                        </StackLayout>
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding BindingContext.ViewMapCommand, Source={Reference lstExamples}}"
                                CommandParameter="{Binding .}"
                                />
                        </StackLayout.GestureRecognizers>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>