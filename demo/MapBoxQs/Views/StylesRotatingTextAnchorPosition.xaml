<?xml
    version="1.0"
    encoding="utf-8"?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nx="clr-namespace:Naxam.Controls.Forms;assembly=Naxam.Mapbox.Forms"
    mc:Ignorable="d"
    x:Class="MapBoxQs.Views.StylesRotatingTextAnchorPosition">
    <Grid>
        <nx:MapView
            x:Name="map" />
        <ContentView
            Padding="24"
            BackgroundColor="{StaticResource ColorPrimaryLight}"
            HorizontalOptions="Fill"
            VerticalOptions="End"
            >
            <Label
                HorizontalTextAlignment="Center"
                HorizontalOptions="Fill"
                x:Name="txtState"
                TextColor="Black"/>
            
            <ContentView.GestureRecognizers>
                <TapGestureRecognizer
                    Tapped="TapGestureRecognizer_OnTapped"/>
            </ContentView.GestureRecognizers>
        </ContentView>
    </Grid>
</ContentPage>